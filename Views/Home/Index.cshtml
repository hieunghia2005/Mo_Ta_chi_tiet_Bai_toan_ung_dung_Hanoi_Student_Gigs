
@{
    ViewData["Title"] = "Trang chủ";
}

<div class="text-center mb-5">
    <h1 class="display-5 fw-bold text-primary">Chào mừng đến với Hanoi Student Gigs 🎓</h1>
    <p class="lead text-muted">Nền tảng việc làm bán thời gian & freelance dành cho sinh viên tại Hà Nội</p>
</div>
<!-- Tìm kiếm và bộ lọc -->
<div class="d-flex flex-wrap gap-2 my-3">
    <input type="text" class="form-control w-25" placeholder="Tìm theo từ khóa..." />
    <select class="form-select w-auto">
        <option selected>Mức Lương</option>
        <option>Dưới 3 triệu</option>
        <option>3-5 triệu</option>
    </select>
    <select class="form-select w-auto">
        <option selected>Loại việc làm</option>
        <option>Part-time</option>
        <option>Freelance</option>
    </select>
    <select class="form-select w-auto">
        <option selected>Ngành nghề</option>
        <option>Gia sư</option>
        <option>Thiết kế</option>
    </select>
    <select class="form-select w-auto">
        <option selected>Công ty</option>
        <option>Hoàng Hà Mobile</option>
    </select>
    <button class="btn btn-primary">Tìm Việc</button>
</div>

<div class="row text-center mb-5">
    <div class="col-md-4">
        <div class="card shadow-sm p-3">
            <h5 class="card-title text-primary">🎯 Tìm việc phù hợp</h5>
            <p class="card-text">Dễ dàng tìm kiếm công việc phù hợp với kỹ năng & lịch học của bạn.</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm p-3">
            <h5 class="card-title text-primary">🏢 Nhà tuyển dụng uy tín</h5>
            <p class="card-text">Chỉ hiển thị các tin đăng đã được kiểm duyệt bởi hệ thống.</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm p-3">
            <h5 class="card-title text-primary">📝 Ứng tuyển nhanh chóng</h5>
            <p class="card-text">Tạo hồ sơ & ứng tuyển trong vài cú click chuột.</p>
        </div>
    </div>
</div>

<h3 class="mb-3 text-secondary">📚 Lựa chọn ngành nghề</h3>

<div class="row g-3 mb-5">
    @{
        var categories = new[] {
            "Gia sư", "Thiết kế đồ họa", "Lập trình", "Marketing", "Nhà hàng - phục vụ", "Dịch thuật", "Nhập liệu", "Bán hàng"
        };
    }

    @foreach (var cat in categories)
    {
        <div class="col-md-3 col-sm-6">
            <a href="/Jobs/SearchByCategory?category=@cat" class="btn btn-outline-primary w-100">
                @cat
            </a>
        </div>
    }
</div>

